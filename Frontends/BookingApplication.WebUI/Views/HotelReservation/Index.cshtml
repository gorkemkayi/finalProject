@model BookingApplication.Dto.HotelReservationDtos.CreateHotelReservationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">
    <form class="bg-light p-5 contact-form" method="post">
        <h3 class="alert alert-success">Room Reservation Form</h3>
        <br />
        <input type="text" asp-for="HotelRoomId" value="@ViewBag.RoomId" class="form-control" placeholder="RoomID">

        <div class="form-group">
            <input type="date" asp-for="CheckInDate" class="form-control" placeholder="Checkin Date">
        </div>
        <div class="form-group">
            <input type="date" asp-for="CheckOutDate" class="form-control" placeholder="CheckOut Date">
        </div>
        <div class="form-group">
            <input type="submit" value="Make a Reservation" class="btn btn-primary py-3 px-5">
        </div>
    </form>
    @ViewBag.ErrorMessage
</div>

