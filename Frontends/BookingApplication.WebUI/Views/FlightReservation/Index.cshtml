@model BookingApplication.Dto.FlightReservationDtos.CreateFlightReservationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">
    <form class="bg-light p-5 contact-form" method="post">
        <h3 class="alert alert-success">Flight Reservation Form</h3>
        <br />
            <input type="hidden" asp-for="FlightID" value="@ViewBag.v3" class="form-control" placeholder="FlightID">
        
        <div class="form-group">
            <input type="text" asp-for="Name" class="form-control" placeholder="First Name">
        </div>
        <div class="form-group">
            <input type="text" asp-for="Surname" class="form-control" placeholder="Last Name">
        </div>
        <div class="form-group">
            <input type="email" asp-for="Email" class="form-control" placeholder="Your Email">
        </div>
        <div class="form-group">
            <input type="text" asp-for="Phone" class="form-control" placeholder="Phone">
        </div>
        <div class="form-group">
            <input type="number" asp-for="Age" class="form-control" placeholder="Age">
        </div>
        <div class="form-group">
            <input type="text" asp-for="SeatNumber" class="form-control" placeholder="SeatNumber">
        </div>
        <div class="form-group">
            <input type="submit" value="Make a Reservation" class="btn btn-primary py-3 px-5">
        </div>
    </form>

</div>

