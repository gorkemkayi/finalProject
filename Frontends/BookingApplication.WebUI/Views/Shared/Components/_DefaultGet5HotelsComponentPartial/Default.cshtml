@model List<BookingApplication.Dto.HotelDtos.Result5HotelDto>

<section class="ftco-section ftco-no-pt bg-light">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-12 heading-section text-center ftco-animate mb-5">
				<span class="subheading">Our Advices</span>
				<h2 class="mb-2">Feeatured Hotels</h2>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="carousel-car owl-carousel">
					@foreach (var item in Model)
					{
						<div class="item">
							<div class="car-wrap rounded ftco-animate">
								<div class="img rounded d-flex align-items-end" style="background-image: url(@item.Image);">
								</div>
								<div class="text">
									<h2 class="mb-0"><a href="#">@item.Name</a></h2>
									<div class="d-flex mb-3">
										<span class="cat">@item.HotemlAmentities</span>
										<p class="price ml-auto">@item.CurrencyName @item.Price <span>/day</span></p>
									</div>
									<p class="d-flex mb-0 d-block"><a href="/HotelDetail/Index/@item.ID" class="btn btn-secondary py-2 ml-1">Details</a></p>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</section>
